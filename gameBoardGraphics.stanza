defn rebuild (gbg : GameBoardGraphics window-id : Int) :
    match(lab(gbg)) :
        (lab : Labyrinth) :
            if get-window-id(board-window(gbg)) == window-id :
                build-board(gbg lab)
            else if get-window-id(cards-window(gbg)) == window-id :
                build-cards(gbg lab)
            else if get-window-id(buttons-window(gbg)) == window-id :
                draw-buttons(gbg)
        (f) : false

