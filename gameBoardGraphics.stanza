defn drawPlots (gbg : GameBoardGraphics plots : Vector<Int|String> coord : [Int Int]) :
    do(
        fn (plot i) :
            val row = i / 6
            val col = i % 6
            val x = coord[0] + col * 73
            val y = coord[1] + row * 73
            val p = switch {plot == _} :
                1 : plot1(gbg)
                -1 : plot1(gbg)
                2 : plot2(gbg)
                -2 : plot2(gbg)
                3 : plot3(gbg)
                -3 : plot3(gbg)
                "w" : plotW(gbg)
                "-w" : plotW(gbg)
                else : plot1(gbg)
            overlay(board-window(gbg) p [x, y])
        plots
        0 to length(plots)
    )


