        val x = (coord[0] - i * 50) - (i / 5) * 67
        overlay(board-window(gbg) sleeperCell(gbg) [x, coord[1]])
    if cellcamps(lab) > 0:
        pasteCylinder(gbg sleeperCell(gbg) cellcamps(lab) [3193 407])

