            val num = length(markers)
            if num > 0:
                val row = 1 when score >= 7 else 0
                val col = (score - 6) when score >= 7 else score
                val x = coord[0] + interval * col
                val y = coord[1] - (num - 1) * 33 + row * interval
                do(
                    fn (i) : overlay(board-window(gbg) markers[i] [x  (y + i * 67)])
                    0 to num
                )
