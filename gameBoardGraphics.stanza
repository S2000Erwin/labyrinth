deftype GraphicElement
deftype Button <: GraphicElement
defmulti draw (g : GraphicElement dst-surface : Long dst-rect : SDL-rect) -> False
defmulti trigger (g : GraphicElement) -> String|Int

defn Button (
    [width height] : [Int Int] 
    button-colors : Tuple<SDL-color> 
    text : String 
    font : Long 
    text-color : SDL-color 
    user-info : String|Int
    callback : (String|Int -> False) ) -> Button :
    val button-surface = sdl-create-surface([width height])
    val outer-rect = SDL-rect(0 0 width height)
    val inner-rect = SDL-rect(to-int(0.1f * to-float(width)) to-int(0.1f * to-float(height))
                        to-int(0.8f * to-float(width)) to-int(0.8f * to-float(height)))
    sdl-fill-rect(button-surface false SDL-color(0Y 0Y 0Y 0Y))
    sdl-fill-rect(button-surface outer-rect button-colors[0])
    sdl-fill-rect(button-surface inner-rect button-colors[1])
    val [w h] = sdl-text-size(text font text-color)
    val x = (width - w) / 2
    val y = (height - h) / 2
    sdl-draw-text(button-surface [x y] text font text-color)
    new Button :
        defmethod draw (this dst-surface : Long dst-rect : SDL-rect ) -> False :
            sdl-overlay(button-surface false dst-surface dst-rect)
            false
        defmethod trigger (this) -> String|Int:
            callback(user-info)
            user-info
        
val us-color = SDL-color(180Y 155Y 95Y 255Y)
val jihadist-color = SDL-color(80Y 112Y 87Y 255Y)
val unassociated-color = SDL-color(200Y 200Y 200Y 255Y)
val good-color = SDL-color(0Y 144Y 214Y 255Y)
val fair-color = SDL-color(255Y 231Y 0Y 255Y)
val poor-color = SDL-color(238Y 28Y 37Y 255Y)
val islamrule-color = SDL-color(24Y 107Y 55Y 255Y)
