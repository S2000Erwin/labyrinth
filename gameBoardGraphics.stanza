    match(find( {get-window-id(_) == window-id } windows(gbg) )) :
        (win : Window) : screen-to-canvas(win [x y])
        (f) : [(- 1) (- 1)]

defn screen-to-canvas (win : Window [s-x s-y] : [Int Int]) -> [Int Int] :
    val win-size = size(win)
    val screen-coord = [ to-float(s-x) / to-float(win-size[0]) to-float(s-y) / to-float(win-size[1]) ]
    ; println("screen-coord:%_" % [screen-coord])
    val canvas-rect = cal-canvas-rect(win)
    val canvas-coord = [ 
        to-int(to-float(w(canvas-rect)) * screen-coord[0]) + x(canvas-rect)
        to-int(to-float(h(canvas-rect)) * screen-coord[1]) + y(canvas-rect)
    ]
    ; println("canvas-coord:%_" % [canvas-coord])
    canvas-coord

