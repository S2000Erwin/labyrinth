defn reverse-color ( c : SDL-color ) -> SDL-color :
    SDL-color(255Y - r(c) 255Y - g(c) 255Y - b(c) a(c))

public defn build-buttons (gbg : GameBoardGraphics lab : Labyrinth 
                            msg : String
                            validAnswers : Seqable<String|Int> displays : Seqable<String>|False color-hint : String|False) :
    sdl-set-window-title(window $ buttons-window $ gbg msg)
    sdl-clear-surface $ canvas $ buttons-window $ gbg
    set-center(buttons-window(gbg) [0.5f 0.1f])
    val [width height] = sdl-surface-size(canvas(buttons-window(gbg)))
    val grid-size = [width to-int(to-float(height) / to-float(button-slots))]
    val button-size = [to-int(0.8f * to-float(width)) to-int(0.8f * to-float(height) / to-float(button-slots))]
    val buttons = Vector<Panel>()
    ; println("width=%_ height=%_ grid-size=%_ button-size=%_" % [width height grid-size button-size])
    do(
        fn (ans display y) :
            val color-1 : SDL-color = 
                ( match(ans) :
                    (card-id : Int) :
                        val [ops assoc title] = getCardInfo(card-id)
                        us-color when assoc == "US" else
                        jihadist-color when assoc == "Jihadist" else
                        unassociated-color
                    (f) : unassociated-color
                ) when color-hint == "card"
                else match(ans) :
                    (name : String) :
                        match(getGovern(lab name)) :
                            (govern : String) :
                                switch {govern == _} :
                                    "good" : good-color
                                    "fair" : fair-color
                                    "poor" : poor-color
                                    "islamrule" : islamrule-color
                                    else : unassociated-color
                            (f) : unassociated-color
                    (f) : unassociated-color
                when color-hint == "country"
                else unassociated-color
            val color-2 : SDL-color =
                color-1 when color-hint == "card"
                else match(ans) :
                    (name : String) :
                        muslim-color when isMuslim(lab name)
                        else switch {getPosture(lab name) == _} :
                            "hard" : hard-color
                            "soft" : soft-color
                            else : unassociated-color
                    (f) : unassociated-color
                when color-hint == "country"
                else unassociated-color
            val button = Button( 
                button-size
                [color-1 color-2]
                match(display) :
                    (display : String) : display
                    (f) :
                        match(ans) :
                            (ans : String) : ans
                            (ans : Int) : to-string(ans)
                            (f) : " "
                font(gbg)
                SDL-color(0Y 0Y 0Y 255Y) 
                ans
                fn (ans) : println("Button %_ is pressed" % [ans])
            )

            add(buttons Panel(SDL-rect(0 + to-int(0.1f * to-float $ button-size[0]) y + to-int(0.1f * to-float $ button-size[1]) button-size[0] button-size[1]) button))
        validAnswers
        match(displays) :
            (f : False) : repeat(false)
            (displays) : displays as Seqable<String>
        0 to height by grid-size[1]
    )
    set-buttons(gbg to-tuple(buttons))
    draw-buttons(gbg)

defn draw-buttons (gbg) :
    val panels = buttons(gbg)
    val window = buttons-window(gbg)
    val canvas = canvas(window)
    do( fn (panel) : draw(button(panel) canvas rect(panel))
        panels
    )
    show(window)

